
<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>

<%= render 'layouts/error', book: @book %>

	<dir class="field">
		<label for="title">Title</label>
		<%= f.text_field :title %>
	</div>

	<div class="field">
		<label for="body">Body</label>
		<%= f.text_area :body %>
	</div>

	<div class="actions">
	<br><%= f.submit 'Update Book' %></br>
	</div>

<% end %>

<%= link_to 'Show', book_path %> |
<%= link_to 'Back', books_path %>
